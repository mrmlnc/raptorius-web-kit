    "yellfy-svg-sprite": "^2.0.0",
    "yellfy-use": "^2.1.0"
  },
  "scripts": {
    "postinstall": "bower i",
    "test": "gulp test"
  },
  "pugLintConfig": {
    "extends": "./gulp/config/puglint.js"
  },
  "stylelint": {
    "extends": "./gulp/config/stylelint.js"
  },
  "xo": {
    "space": true,
    "rules": {
      "no-var": 2,
      "prefer-const": [2, { "destructuring": "all" }],
      "space-before-function-paren": [2, "never"],
      "arrow-parens": [2, "always"],
      "object-curly-spacing": [2, "always"],
      "generator-star-spacing": [2, "after"],
      "import/prefer-default-export": 0,
      "import/no-unassigned-import": 0
    },
    "globals": [
      "use"
    ],
    "envs": [
      "browser",
      "node",
      "mocha",
      "jquery"
    ]
  },
  "yellfy": {
    "templates": "gulp/templates",
    "html": "pug",
    "css": "less"
  }
}
