    "pug-lint": "^2.3.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.6.1",
    "stylelint": "^7.5.0",
    "stylelint-config-standard": "^16.0.0",
    "syncy": "^2.0.1",
    "text-table": "^0.2.0",
    "time-stamp": "^1.0.1",
